<%= form_with(local: true) do |f| %>
  
  <%= f.label :task_name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :task_name, class: "form-control" %>
  
  <%= f.label :note, class: "label-form" %>
  <%= f.text_area :note, :size => "20x5", class: "form-control" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
  
  
<% end %>


