<header class="navbar navbar-fixed-top navbar-inverse" id = "header">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, class: "header-list" %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class = "link"><%= link_to "ユーザー一覧", users_path, class: "header-list" %></li>
          <% end %>
          <li class = "link-task"><%= link_to "タスク新規作成", new_user_task_path(current_user), class: "header-list" %></li>
          <li class="dropdown" >
            <a href="#" class="dropdown-toggle header-list" data-toggle="dropdown" id = "dropdown-title">
              <%= current_user.name %> <b class="caret"></b> <!--caretあとで調べる -->
            </a>
            <ul class="dropdown-menu">
              <div class = "dropdown-header">ユーザー</div>
              <li><%= link_to "詳細", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <div class = "dropdown-header">タスク</div>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, class: "header-list"%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
